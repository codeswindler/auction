# Database Configuration (MariaDB/MySQL)
DB_HOST=127.0.0.1
DB_NAME=auction
DB_USER=ussd_user
DB_PASS=your_password

# Application Settings
APP_ENV=production
APP_DEBUG=false

# Admin Authentication (change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# USSD Codes

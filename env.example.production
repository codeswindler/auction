# Production Environment Variables for Contabo VPS
# Copy this to .env on your VPS and fill in your actual values

# Database Configuration (MariaDB on Contabo VPS)
DB_HOST=127.0.0.1
DB_NAME=auction
DB_USER=ussd_user
DB_PASS=RootPass123!

# Application Settings
APP_ENV=production
APP_DEBUG=false

# Admin Authentication (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_strong_admin_password_here

# Session Secret (generate a long random string)
SESSION_SECRET=generate-a-very-long-random-string-here-change-this-in-production

# USSD Codes
# Simulator (local testing)
SIMULATOR_USSD_CODE=*123#
VITE_SIMULATOR_USSD_CODE=*123#
# Live Advanta extension
ADVANTA_USSD_CODE=*519*63#
# Optional: USSD gateway callback URL
USSD_CALLBACK_URL=https://your-domain.com/api/ussd

# M-Pesa STK Push Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback

# Jenga Capital USSD Application - Production Environment
# Copy this to .env.production and fill in actual values

# Node Environment
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://ussd_user:PASSWORD@localhost:5432/ussd_db

# Session Secret (generate a strong random string)
SESSION_SECRET=your-secure-random-session-secret-here

# Domain
DOMAIN=jengacapital.co.ke

# Advanta USSD Gateway Integration
USSD_GATEWAY_URL=https://your-advanta-gateway-url.com
USSD_GATEWAY_SECRET=your-gateway-secret-key

# Optional: Logging
LOG_LEVEL=info
